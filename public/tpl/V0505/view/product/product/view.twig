                    <div class="row tab-pane" id="tabDetails" style="margin-bottom: 6px; background-color: white">
                        <div class="col-8">
                            <div class="tab-pane" id="detailChiTiet">
                                <h2 class="pane-header"><span>THÔNG TIN CHI TIẾT</span></h2>
                                <div class="p-2">
                                    {{ content | raw }}
                                </div>
                            </div>
                        </div>
                        <div class="col-4 border-left">
                            <div class="tab-pane" id="detailThongSo">
                                <h4 class="pane-header">THÔNG SỐ KỸ THUẬT</h4>
                                <div class="specifications" id="detailThongSoKyThuat">
                                    {% if(product.description is not empty) %}
                                        {% set des = product.description | replace({'<p style="margin:0px;">':"",'<p>':"",'<p style="margin:0px;padding:0px;font-family:Tahoma, Arial, Helvetica, sans-serif;font-size:14px;text-align:justify;">':""}) %}
                                        {{ des | raw }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="detailRating" style="margin-bottom: 6px; background-color: white">
