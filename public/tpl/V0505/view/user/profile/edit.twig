{% extends 'layout/layout' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ '/css/validationEngine.jquery.css' }}" type="text/css">
{% endblock %}

{% block body %}

    <section class="container-fluid">


        <div class="container">
            <div class="row d-block p-2">
                <a href="/">Trang chủ</a> / <a href="/profile">Tài khoản</a> / <a>Sửa thông tin</a>
            </div>
            <div class="container" style="font-size: 16px;">

                <h2 class="text-center tp_title">{{ translate('Sửa thông tin tài khoản cá nhân') }}</h2>
                <div class="row-fluid">
                    <div class="container" style="background-color: white">
                        <form action="" method="post" class="col-md-8 col-xs-12 col-md-offset-1">
                            <table class='table profile' cellspacing='0' border="0">
                                <tr>
                                    <td>{{ translate('Địa chỉ email') }}</td>
                                    <td class='val'>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Họ và tên') }}</td>
                                    <td class='val'>
                                        <input type="text" id="fullName" name="fullName" value="{{ user.fullName }}"
                                               placeholder="Họ tên"
                                               class="validate[required,minSize[4],maxSize[32]] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Điện thoại') }}</td>
                                    <td class='val'>
                                        <input type="text" id="mobile" name="mobile" value="{{ user.mobile }}"
                                               placeholder="Điện thoại"
                                               class="validate[required,custom[phone]] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Thành phố') }}</td>
                                    <td class='val'>
                                        <select name='cityId' id='cityId' class=" form-control">
                                            <option value="">Chọn Tỉnh/ thành phố</option>
                                            {% for city in cities %}
                                                <option {{ ((city.id) == user.cityLocationId) ?'selected="selected"' : '' }}
                                                        value='{{ city.id }}'>{{ city.nativeName }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Quận Huyện') }}</td>
                                    <td class='val'>
                                        <select name='districtId' id='districtId' class=" form-control">
                                            <option value="">Chọn Quận/ Huyện</option>
                                            {% for dt in districts %}
                                                <option {{ (dt.id == user.districtLocationId) ? 'selected="selected"' : '' }}
                                                        value='{{ dt.id }}'>{{ dt.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Địa chỉ') }}</td>
                                    <td class='val'>
                                        <input type="text" id="address" name="address" value="{{ user.address }}"
                                               placeholder="Địa chỉ chi tiết" class="validate[required] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td class="val">
                                        <button type='submit'
                                                class="btn btn-lg btn-style tp_button">{{ translate('Xác nhận') }}</button>
                                        <button type="button" class="btn btn-lg btn-style tp_button"
                                                onclick="window.location.href='/profile'" style="background: #ccc;">Hủy
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>

{#    {% include 'layout/footer' %}#}

    {% block fixfoot %}
        <div class="fixbot-detail">
            <a href="https://www.messenger.com/t/bencomputers" class="btn-red-home"><i class="fab fa-facebook-messenger text-white fa-fw"></i> Chat với tư vấn viên</a>
            <a href="tel:0899179991" class="btn-icon"><i class="fas fa-phone-alt"></i><span>Gọi điện</span></a>
            <a href="#" class="btn-icon" id="showFloatButton"><i class="fas fa-ellipsis-h"></i></a>
        </div>
    {% endblock %}

{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ '/cdn/_cache/location.vn.js' }}"></script>
    <script type="text/javascript" src="{{ '/js/jquery/jquery.validationEngine-vi.js' }}"></script>
    <script type="text/javascript" src="{{ '/js/jquery/jquery.validationEngine.js' }}"></script>
    <script type="text/javascript" src="{{ '/tpl/'~ templateDir ~'/js/user.js' }}"></script>
{% endblock %}