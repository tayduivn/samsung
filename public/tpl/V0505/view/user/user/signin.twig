{% extends 'layout/layout' %}

{% block body %}
    <section class="container-fluid">


        <div class="container">
            <div class="row d-block p-2">
                <a href="/">Trang chủ</a> / Đăng nhập
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary card-outline mb-3 ml-0 mr-0">
                        <div class="card-header">
                            <h3 class="card-title">Đăng nhập</h3>

                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="loginForm">
                                    {{ partial('partial/form',{'form':form}) }}
                                    <div class="blkSign">
                                        <a class="loginFb" href="/user/fbsignin?redirect=/" target="_top"><i class="fa fa-facebook"></i> Facebook</a></a>
                                        <a class="loginGg" href="/user/ggsignin" target="_top"><i class="fa fa-google"></i> Google</a>
                                    </div>
                                    <p class="btnforget">
                                        <a rel="nofollow" href="/user/getpassword" style="text-decoration:underline;font-weight:bold">
                                            <i class="fa fa-question-circle"></i>
                                            {{ translate('Quên mật khẩu') }}
                                        </a>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <img src="{{ '/tpl/'~ templateDir ~'/img/2019/login-banner.png' }}" alt="Ben computer login"
                                         style="width: 100%">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </section>

{#    {% include 'layout/footer' %}#}
{% endblock %}