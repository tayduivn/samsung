        <div class="content__product">
            {% set banner_main = getBannerByPositionCode('BANNER_MAINs') %}
            <div class="row">
                {% if (banner_main is not empty) %}
                    {% for m in banner_main %}
                    {% set imageSlide = m.imagesrc %}
                    {% set options = {
                        alt: m.name,
                        lazy: true,
                        openDiv: false,
                    } %}
                    <div class="col-md-4 col-12 col-lg4 col-ms-4 content__product--item">
                        <div class="border-image-item">
                            {{ macroLazyFocusImager.LazyFocusImager(imageSlide,options) }}
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="col-md-4 col-12 col-lg4 col-ms-4 content__product--item">
                        <div class="border-image-item">
                            <img src="//theme.hstatic.net/200000000133/1000569834/14/home3banner_1.jpg?v=1220" class="img-fluid d-block w-100">
                        </div>
                    </div>
                    <div class="col-md-4 col-12 col-lg4 col-ms-4 content__product--item">
                        <div class="border-image-item">
                            <img src="//theme.hstatic.net/200000000133/1000569834/14/home3banner_2.jpg?v=1220" class="img-fluid d-block w-100">
                        </div>
                    </div>
                    <div class="col-md-4 col-12 col-lg4 col-ms-4 content__product--item">
                        <div class="border-image-item">
                            <img src="//theme.hstatic.net/200000000133/1000569834/14/home3banner_3.jpg?v=1220" class="img-fluid d-block w-100">
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>