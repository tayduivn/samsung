{% extends 'layout/layout' %}
{% block meta %}
  {{ headTitle('Đăng nhập').setSeparator(' - ').setAutoEscape(false)|raw }}
  <meta name="description" content="Đăng nhập">
  <meta name="keywords" content="Đăng nhập">
  <meta property="og:url" content="/user/signin">
  <meta property="og:title" content="Đăng nhập">
{% endblock %}
{% block body %}
  <style>
    .loginForm {
      min-height: 38rem;
    }
    .inputBox {
      background: #EDEDED;
      border-radius: 5px;
      padding: 50px;
    }
    .inputBox ul {
      list-style: none;
      padding: 0;
    }
    .inputBox input {
      font-size: 1.5rem;
      margin-bottom: 20px;
      min-width: 300px;
    }
    .inputBox button {
      font-size: 1.5rem;
    }
    #username,
    #password {
      display: block;
      width: 100%;
      min-height: calc(1.5em + 0.75rem + 2px);
      padding: 0.375rem 0.75rem;
      font-weight: 400;
      line-height: 1.5;
      color: #495057;
      background-color: #fff;
      background-clip: padding-box;
      border: 1px solid #ced4da;
      appearance: none;
      border-radius: 0.25rem;
      transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    @media (prefers-reduced-motion: reduce) {
      #username,
      #password  {
        transition: none;
      }
    }
    #username:focus,
    #password:focus {
      color: #495057;
      background-color: #fff;
      border-color: #8bbafe;
      outline: 0;
      box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
    #username::placeholder,
    #password::placeholder {
      color: #6c757d;
      opacity: 1;
    }
    #username:disabled,
    #password:disabled, #username[readonly],
    #password[readonly] {
      background-color: #e9ecef;
      opacity: 1;
    }
    .inputBox .htmlBtn {
      min-width: auto;
      padding: 3px 10px;
      background-color: #d01132;
      color: white;
      border: none;
      outline: none;
      border-radius: 5px;
      transition: all .3s;
    }
    .inputBox .htmlBtn:hover {
      box-shadow: 1px 1px 10px #d01132;
      transition: all .3s;
    }
  </style>
  <main>
    <section class="loginForm d-flex justify-content-center align-items-center">
        <div class="inputBox">
          {{ partial('partial/form',{'form':form}) }}
          <div class="d-flex justify-content-between align-items-center">
            <a href="">
              <span class="text-primary">Bạn quên mật khẩu ?</span>
            </a>
            <a href="/user/signup">
              <u class="text-primary"><span>Đăng ký</span></u>
            </a>
          </div>
        </div>
    </section>
  </main>
{% endblock %}
