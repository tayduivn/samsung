                            <div class="div-text">
                                <p>Hotline<a href="tel:09xxx">09xxxx</a>
                                </p>
                                <p>Email : <a href="mailto:abc@gmail.com">abc@gmail.com</a>
                                </p>
                                <p>Website: <a href="nhanh.vn">nhanh.vn</a>
                                </p>
                            </div>
                            <div role="form" class="wpcf7" id="wpcf7-f6741-o1" dir="ltr">
                                <div class="screen-reader-response"></div>
                                <form method="post" class="wpcf7-form">
                                    <div class="form-subscriber">
                                        <p class="headtitle">Đăng ký nhận thông tin khuyến mại qua Email</p>
                                        <div class="field">
                                            <span class="wpcf7-form-control-wrap your-sdt">
