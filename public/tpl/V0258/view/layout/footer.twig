                                <div class="box-social">
                                    <ul class="clear">
                                        {% set foot_banners = getBannerByPositionCode('FOOTER_CERTIFICATE') %}
                                        {% if(foot_banners) %}
                                            {% for b in foot_banners %}
                                                {% set imageSlide = b.imagesrc %}
                                                {% set options = {
                                                    alt: b.name,
                                                    lazy: true,
                                                    openDiv: false,
                                                } %}
                                                <a href="{{ b.viewLink }}">
                                                    {{ macroLazyFocusImager.LazyFocusImager(imageSlide,options) }}
                                                </a>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
