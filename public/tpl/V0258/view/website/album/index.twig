{% extends "layout/layout" %}
{% import 'layout/_lazyFocusImager' as macroLazyFocusImager %}
{% block meta %}
    {{ headTitle('Album').setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta property="og:title" content="Album">
    <meta property="og:url" content="{{ getCurrentUrl() }}">
{% endblock %}
{% block body %}
    <section class="content container ">
        <div class="all-ms">
            <div class="breadcrumb breadcrumbs">
                <div class="rdfa-breadcrumb">
                    <div>
                        <p>
                            <span class="breadcrumbs-title"> </span>
                            <span typeof="v:Breadcrumb">
                            <a href="/" class="home">Trang chủ</a>
                        </span>
                            <span class='separator'>|</span> {{ translate('Album') }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="album-show col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="span9 main">
                        <div class="home-page">
                            <h1 class="entr-title tp_title">{{ translate('Album') }}</h1>
                            <div class="des-cat clear"></div>
                            {% if(paginator) %}
                                <div class="list-sps">
                                    {% for a in paginator %}
                                        {% set options = {
                                            alt: a.title | e('html'),
                                            lazy: true,
                                            openDiv: false,
                                        } %}
                                        <div class="show-new-vip new-home cat-ls col-md-6">
                                            <a class="show-thumb-vip" href="{{ a.viewLink }}"
                                               title="{{ a.name }}">

                                                <p class="show-title-vip">{{ a.name }}</p>
                                                <a class="more-show-album" href="{{ a.viewLink }}">
                                                    {{ translate('SHOW NOW') }}</a>
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class='wp-pagenavi'>
                                    {{ paginationControl(paginator, 'Sliding', 'partial/listPage') }}
                                </div>
                            {% else %}
                                <h3 class="no-news">Chưa có album nào</h3>
                            {% endif %}
                        </div>

                    </div>
                </div>
                {% include 'website/album/sidebar' %}
            </div>
        </div>
    </section>
{% endblock %}