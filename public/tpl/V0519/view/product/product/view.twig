                                <div class="inner">
                                    {% if (product.images) %}
                                        {% for i in product.images %}
                                            <li class="thumbnail-item">
                                                <a class="product-single__thumbnail" data-pos="1">
                                                    <img class="lazyload img-aside" src="{{ i.thumbnailUri }}" data-src="{{ i.thumbnailUri }}" alt="{{ i.name }}">
                                                </a>
                                            </li>
                                        {% endfor %}
                                    {% endif %}
