                                        {% for i in product.images %}
                                            <div class="item">
                                                <a>
                                                    <img class="lazyload" src="{{ i.thumbnailUri }}" data-src="{{ i.thumbnailUri }}" alt="">
                                                </a>
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>

