<!DOCTYPE html>
<html lang="vi-VN" data-nhanh.vn-template="{{ templateDir }}">
<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta property="og:locale" content="vi_VN">
        <link rel="alternate" hreflang="x-default" href="nhanh.vn">
        <link rel="alternate" hreflang="vi" href="nhanh.vn">
        <meta name="revisit" content="1 days">
        <meta name="robots" content="index,follow">
        <link rel="icon" href="//bizweb.dktcdn.net/100/369/492/themes/741260/assets/favicon.png?1594607980046" type="image/x-icon" />
        <!-- Title and description ================================================== -->
        {% block title %}{% endblock %}
        <meta name="description" content="Suplo Baby - Hệ thống cửa h&#224;ng thời trang v&#224; đồ d&#249;ng cho c&#225;c b&#233; . Nhanh theme. Giao diện Nhanh. Nhanh theme. Nhanh.">
    <link href="{{ getFavicon() ? getFavicon() : '//bizweb.dktcdn.net/100/369/492/themes/741260/assets/favicon.png?1594607980046' }}" rel="shortcut icon" type="image/vnd.microsoft.icon">
    {{ headMeta().appendName('viewport', 'width=device-width, initial-scale=1.0').appendHttpEquiv('X-UA-Compatible', 'IE=edge')|raw }}
    {% block meta %}{% endblock %}
        {% set styleSheet = [
        '/css/fontAwesome/font-awesome-5.12.0.min.css',
        '/css/owlCarousel/owl.carousel.min.css',
        templatePath ~'/css/style.css',
        templatePath ~'/css/main.css',
    ] %}
        {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ srcLink(styleSheet,2) }}" type="text/css">
    {{ loadScripts({'positionHead':true}) | raw }}

</head>
<body>
{% set script = [
    '/js/jquery/jquery.min.js',
    '/js/lib.js',
    '/js/jquery/jquery.cookie.js',
        '/js/translate/vi-vn.js',
    '/js/jquery/fancybox-2.1.5/source/jquery.fancybox.pack.js',
    '/js/owlCarousel/owl.carousel.min.js',
    '/js/mmenu/js/jquery.mmenu.min.js',
    '/js/jquery/jquery.number.min.js',
] %}
{#templatePath ~'/js/main.js',#}
{#templatePath ~'/js/cart.js',#}
{#templatePath ~'/js/index.js',#}

<script type="text/javascript" src="{{ srcLink(script,1)  }}"></script>
{% block script %}{% endblock %}
<input type="hidden" id="storeId" value="{{ getStoreId() }}">
{% if (layout().showOnlyContent == true) %}
        {% block checkout %}{% endblock %}
{% else %}
{#        <div id="boxMenu" class="menus">#}
{#                {% include 'layout/menu' %}#}
{#        </div>#}
        {% include 'layout/header' %}
        {% block body %}
                {% block breadcrumb %}{% endblock %}
        {% endblock %}
        {% include 'layout/footer' %}
{% endif %}

{{ loadScripts() | raw}}
{{ headScript }}
{{ inlineScript }}
</body>
</html>
