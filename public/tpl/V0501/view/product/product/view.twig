{% extends "layout/layout" %}
{% import 'layout/_lazyFocusImager' as macroLazyFocusImager %}
{% import 'layout/breadcrumbs' as breadcrumbs %}
{% block meta %}
    {{ headTitle(product.name).setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta name="description" content="{{ metaDescription }}">
    <meta name="keywords" content="{{ product.metaKeywords?:product.name }}">
    <meta property="og:url" content="{{ getCurrentUrl() }}">
    <meta property="og:title" content="{{ product.name }}">
    <meta property="og:description" content="{{ metaDescription }}">
    <meta property="og:image" content="{{ 'https:'~product.imageUri }}">
    <meta property="og:type" content="website">
{% endblock %}
{% block body %}
    {% block breadcrumbs %}
        {% set buildBread = buildBreadcrumbs(category) %}
        {% set buildBread = buildBread | merge ([{'label': product.name,'uri': 'javascript:void(0)', 'class' : 'msp'}]) %}
        {{ breadcrumbs.build(buildBread) }}
    {% endblock %}
    {% set ivt = product.inventory().calcAvailable() %}
    {% if(getParam('preview')) %}
        {% set ivt = 0 %}
    {% endif %}
    {% set priceDiscount = product.priceAfterDiscount %}
    {% set showPrice = product.price %}
    {% set oldPrices = null %}
    {% if(priceDiscount > 0) %}
        {% set showPrice = priceDiscount %}
        {% set oldPrices = product.price %}
    {% elseif(product.oldPrice) %}
        {% set oldPrices = product.oldPrice %}
    {% endif %}
    {% set user = getUser() %}
    {% set variableAttributes = product.variableAttributes %}
    {% set valuesColor = null  %}
    {% set valuesImage = null  %}
    {% set color = variableAttributes['color'] %}
    {% if color is not null or color is not empty %}
        {% set valuesColor = color.childValues %}
    {% endif %}
    {#    Product Attr Images#}
    {% set psAttrImages =  variableAttributes['psimage']%}
    {% if psAttrImages is not null or psAttrImages is not empty %}
        {% set valuesImage = psAttrImages.childValues %}
    {% endif %}
    <section class="product margin-top-40" itemscope="" itemtype="http://schema.org/Product">
        <div class="container">
            <div class="row row_product">
                <div id="main_product" class="details-product col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div class="details">
                        <div class="rows">
                            <div class="product-detail-left product-images col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <div class="row">
                                    <div class="col_large_full large-image">
                                        <a href="{{ product.imageUri }}"
                                           class="large_image_url checkurl" data-rel="prettyPhoto[product-gallery]">
                                            <div style="height:286px;width:420px;" class="zoomWrapper"><img
                                                        id="img_01" class="img-responsive"
                                                        alt="{{product.name}}"
                                                        src="{{ product.imageUri }}"
                                                        data-zoom-image="{{ product.imageUri }}"
                                                        style="position: absolute;"></div>
                                        </a>
                                        <div class="hidden">
                                            <div class="item">
                                                <a href="{{ product.imageUri }}"
                                                   data-image="{{ product.imageUri }}"
                                                   data-zoom-image="{{ product.imageUri }}"
                                                   data-rel="prettyPhoto[product-gallery]">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="{{ product.id }}"
                                         class="col-sm-12 col-xs-12 col-lg-5 col-md-5 child_imgs owl_width no-padding owl-carousel owl-theme ">
                                        {% set childImgs = product.images %}
                                        {% if (childImgs) %}
                                            {% for child in childImgs  %}
                                                <div class="item" style="width: 142.333px; margin-right: 4px;">
                                                    <a
                                                       data-image="{{ child.getSrcUri }}"
                                                       data-zoom-image="{{ child.getSrcUri }}"
                                                       class="">
                                                        <img class="child-img" data-img="{{ child.getSrcUri }}"
                                                             src="{{ child.thumbnailUri }}"
                                                             alt="{{ child.name }}">
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        {% endif %}

                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 details-pro">
                                <div class="title_pr">
                                    <h1 class="title-product" itemprop="name">{{ product.name }}</h1>
                                </div>
                                <div class="price-box price-loop-style" itemscope="" itemtype="http://schema.org/Offer">
                                    <span class="special-price">
                                        <span class="price product-price" itemprop="price">
                                            {{ showPrice|number_format(0) }}VNĐ
                                        </span>
                                        <meta itemprop="priceCurrency" content="VND">
                                    </span>
                                    <span class="old-price">
                                        <span class="price" itemprop="priceSpecification">
                                            {% if(oldPrices > 0) %}
                                                {% set saving = oldPrices > showPrice ? oldPrices - showPrice : 0 %}
                                                <span class="salePrice">{{ oldPrices|number_format(0) }}đ</span>

                                            {% endif %}
                                        </span>
                                    <meta itemprop="priceCurrency" content="VND">
	                                </span>
                                    {% set disCount = product.calcDiscountPercent %}
                                    {% if (disCount > 0) %}
                                        <span class="saveMoney"> | SALE: {{ disCount }}%</span>
                                    {% else %}
                                        <span class="saveMoney" style="display: none;"></span>
                                    {% endif %}
                                    <div class="taxable">
                                        <span class="valibled">Tình trạng:</span>
                                        {% if (ivt > 0) %}
                                            <span class="status_name availabel in-stock">
                                            <span>Còn hàng</span>
                                        </span>
                                        {% else %}
                                            <span class="status_name availabel in-stock">
                                            <span>Hết hàng</span>
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                                {% set brand = getBrand(product.brandId) %}
                                {% if(brand) %}
                                <div class="vender_">
                                    <ul>
                                        <li>
                                            <span>Thương hiệu:</span>
                                            <span class="bold">{{ brand.name }}</span>
                                        </li>
                                        <li>
                                            <span>Dòng sản phẩm:</span>
                                            <span class="bold">{{ category.name }}</span>
                                        </li>
                                        <li><span>Giảm giá 10% cho hoá đơn trên 500k</span></li>
                                        <li><span>Miễn phí giao hàng trong bán kính 5km</span></li>
                                    </ul>
                                </div>
                                {% endif %}
                                <div class="form-product col-sm-12 form-border">
                                    <form enctype="multipart/form-data" id="add-to-cart-form" action=""
                                          method="post" class="form-inline">
                                        {% set variableAttributes = product.variableAttributes %}
                                        {% set flag=0 %}
                                        {% set returnImg = {'return':'image'} %}
                                        {% set color = variableAttributes['color'] %}
                                        {% if color is not null or color is not empty %}
                                            {% set valuesColor = color.childValues %}
                                            {% set numbCl =  (valuesColor | length) %}
                                            {% if(valuesColor is not null and numbCl>0) %}
                                                {% set flag = flag + 1 %}
                                                <div class="color req swatch-color swatch clearfix "
                                                     column="{{ color.column }}">
                                                    <p class="header"><strong>Màu sắc</strong></p>
                                                    {% for attrValue in valuesColor %}
                                                        {% set arrColor = [] %}
                                                        {% set arrColor = arrColor|merge({ (color.column): attrValue.id }) %}
                                                        {% set img = product.attrValueImage(arrColor,false, returnImg) %}
                                                        {% set pIdsAttrStr =  product.attrValueImage(arrColor,true) | json_encode() %}
                                                        {% set pIdsAttrStr = pIdsAttrStr | replace({'[': '', ']': ''}) %}
                                                        <div class="swatch-element">
                                                            <p class="nameColor" style="display: none">{{ attrValue.name }}</p>
                                                            <div class="tooltip">{{ attrValue.name }}</div>
                                                            <a data-psIds="{{ pIdsAttrStr }}" rel="nofollow" href="javascript:"
                                                               data-cloudzoom="useZoom: \'.cloudzoom\', image: \'{{ img }}\', zoomImage: \'{{ img }}\'"
                                                               class="cloudzoom - gallery {{ (numbCl==1)?'active':'' }}"
                                                               title="{{ attrValue.name }}"
                                                               value="{{ attrValue.id }}" data-src="{{ img }}">
                                                                <img src="{{ img }}" alt="{{ attrValue.name }}">
                                                            </a>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                        {% set size = variableAttributes['size'] %}
                                        {% if size is not null or size is not empty %}
                                            {% set valuesSize = size.childValues %}
                                            {% set numbS =  (valuesSize | length) %}
                                            {% if(valuesSize is not null and numbS>0) %}
                                                {% set flag = flag + 1 %}
                                                <div class="size req swatch-nomal  swatch clearfix"
                                                     column="{{ size.column }}">
                                                    <div class="header">Kích cỡ:</div>
                                                    {% for attrValue in valuesSize %}
                                                        <a rel="nofollow" value="{{ attrValue.id }}"
                                                           href="javascript:void(0)"
                                                           class="{{ (numbS==1)?'active':'' }}">{{ attrValue.name }}</a>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                        {% if((flag==0) and (product.childs)) %}
                                            {% set flagchilds= product.childs|length %}
                                            <p style="padding: 5px; text-align: left;">
                                                <span style="width: 131px; display: inline-block">Chọn sản phẩm</span>
                                                <select class="input childProducts">
                                                    <option value="1">Chọn sản phẩm</option>
                                                    {% set name_parent =product.name %}
                                                    {% for cp in product.childs %}
                                                        <option value="{{ cp.id }}, {{ cp.price }}"
                                                                href="{{ cp.imageUri }}"
                                                                data-src="{{ cp.imageUri }}">
                                                            {{ cp.name|replace({ name_parent :''}) }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </p>
                                        {% endif %}
                                        <div class="box-variant clearfix ">
                                            <input type="hidden" name="Id" value="1033524562">
                                        </div>
                                        <div class="form-group form_button_details ">
                                            <header class="not_bg hidden">Số lượng:</header>
                                            <div class="custom input_number_product custom-btn-number form-control">
                                                <button class="btn_num num_1 button button_qty"
                                                        onclick="var result = document.getElementById('qtym'); var qtypro = result.value; if( !isNaN( qtypro ) &amp;&amp; qtypro > 1 ) result.value--;return false;"
                                                        type="button"><i class="fa fa-caret-down"></i></button>
                                                <input type="text" id="qtym" name="quantity" value="1" max="{{ ivt }}"
                                                       onkeyup="valid(this,'numbers')" onkeypress="validate(event)"
                                                       class="form-control prd_quantity">
                                                <button class="btn_num num_2 button button_qty"
                                                        onclick="var result = document.getElementById('qtym'); var qtypro = result.value; if( !isNaN( qtypro )) result.value++;return false;"
                                                        type="button"><i class="fa fa-caret-up"></i></button>
                                            </div>
                                            <div class="btn-submit">
                                                {% if(ivt<=0) %}
                                                    <button type="submit" id="addToCart"
                                                            class="btn btn-lg  btn-cart button_cart_buy_enable unsel add_to_cart btn_buy"
                                                            title="Sản phẩm tạm thời hết hàng" psid="{{ product.id }}" selId="{{ product.id }}" >
                                                        <i class="fa fa-shopping-basket hidden"></i>&nbsp;&nbsp;<span>Sản phẩm hết hàng</span>
                                                    </button>
                                                {% elseif(flag or flagchilds) %}
                                                    <button type="submit" id="addToCart"
                                                            class="btn btn-lg  btn-cart button_cart_buy_enable unsel add_to_cart btn_buy"
                                                            title="Vui lòng chọn màu sắc hoặc kích cỡ!"
                                                            psid="{{ product.id }}" selId="{{ product.id }}" ck="0" >
                                                        <i class="fa fa-shopping-basket hidden"></i>&nbsp;&nbsp;<span>Cho vào giỏ hàng</span>
                                                    </button>
                                                {% else %}
                                                    <button type="submit" id="addToCart"
                                                            class="btn btn-lg  btn-cart button_cart_buy_enable add_to_cart btn_buy"
                                                             psid="{{ product.id }}" selId="{{ product.id }}" ck="1" >
                                                        <i class="fa fa-shopping-basket hidden"></i>&nbsp;&nbsp;<span>Cho vào giỏ hàng</span>
                                                    </button>
                                                {% endif %}
                                            </div>

                                        </div>
                                    </form>
                                </div>
                                <div class="prod-sale">
                                    <a href="javascript:void(0);">Khuyến mại đặc biệt (SL có hạn)</a>
                                    <div class="summary-sale">
                                        <p>Thông tin cập nhật 22h 10/03/2018: Đã hết 10.000 máy đầu tiên mở bán đợt 1.
                                            7.000 máy đợt 2 dự kiến về đến Pelican Store ngày 23/03. Mở đặt trước ưu
                                            tiên nhận hàng trong 3 ngày 23 - 25/03:<br>

                                            1. Thời gian đặt trước: Ngày 11/03 đến 22h 22/03/2018<br>

                                            2. Giá trị đặt trước: 500.000đ (Đặt cọc qua hình thức thanh toán online hoặc
                                            qua cửa hàng Pelican Store Shop gần nhất)<br>

                                            3. Khuyến mãi khi nhận hàng:<br>

                                            Tặng Thẻ nhớ microSD 16GB trị giá 280.000đ + Giảm 4% nếu trả góp 0% qua thẻ
                                            tín dụng từ 5 ngân hàng VPBank, TPBank, Shinhanbank, MSB, HSBC.<br>
                                            Hoặc Trả góp 0% + Hoàn tiền 100,000đ khi Trả góp 0% FEC<br>
                                            4. Ngày trả máy dự kiến: 23 - 25/03<br>

                                            5. Số lượng giới hạn nhận đặt trước: 7.000 đơn đặt cọc đầu tiên từ ngày
                                            11/03.<br>

                                        </p>
                                    </div>
                                </div>
                                <div class="ser-bonus clearfix">
                                    <div class="clearfix margin-bottom-5"><i class="fa fa-gift"></i>
                                        <p class="margin-0">Giảm giá thêm tới <span>15%</span> giá phụ kiện,
                                            <span>1%</span> giá máy cho hội viên Smember</p></div>
                                    <div class="clearfix margin-bottom-5"><i class="fa fa-gift"></i>
                                        <p class="margin-0">Trả góp lãi suất <span>0%</span> với thẻ tín dụng ANZ,
                                            Sacombank, Nam Á Bank, Shinhanbank</p></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tab -->
                    <div class="tabss">
                        <div class="row margin-top-30 xs-margin-top-15 margin-bottom-40">
                            <div class="col-xs-12 col-lg-12 col-sm-12 col-md-12">
                                <!-- Nav tabs -->
                                <div class="product-tab e-tabs">
                                    <ul class="tabs tabs-title clearfix">
                                        <li class="tab-link current" data-tab="tab-1">
