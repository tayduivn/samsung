                                <div class=" owl_product_view owl-carousel owl-theme" >
                                    {% set proReleated = search({ 'categoryId':product.categoryId}) %}
                                    {% if(proReleated) %}
                                        {% for p in proReleated %}
                                            {% set image = p.thumbnailUri %}
                                            {% set options = {
                                                alt: p.name,
                                                lazy: true,
                                                class: 'imageChange swatch-'~p.id,
                                                openDiv: false,
                                            }%}
                                            {% set priceDiscount = p.priceAfterDiscount %}
                                            {% set percent = p.calcDiscountPercent %}
                                            <div class="item">
                                                <div class="product-box">
