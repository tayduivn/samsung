{% macro build(breadcrumbs) %}
    {% set setUlClass = 'breadcrumb' | raw %}
    {% if(setUlClass) %}
        {% set setUlClass = setUlClass %}
    {% endif %}
    {% set breadcrumb = null %}
    {% if(breadcrumbs) %}
        {% set breadcrumb = breadcrumbs %}
    {% endif %}
    <section class="bread-crumb">
        <span class="crumb-border"></span>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 a-left">
                    <ul class="{{ setUlClass | raw }}" itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <li class="home">
                            <a itemprop="url" href="/"><span itemprop="title">Trang chủ</span></a>
                        </li>
                        {% if(breadcrumb) %}
                            {% set k = 1 %}
                            {% for br in breadcrumb %}
                                {% set uri = (br['uri'])?br['uri']:'' %}
                                {% set name = (br['label'])?br['label']:'' %}
                                {% set class = (br['class'])?br['class']:'' %}
                                {% set rel = (br['rel'])?br['rel']:'' %}
                                <span class="mr_lr"> <i class="fa fa-angle-right"></i> </span>
                                <a href="{{ uri }}">
                                <li><strong><span itemprop="title">{{name}}</span></strong></li>
                                </a>
                                {% set k = k + 1 %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}
