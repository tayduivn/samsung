{% extends "layout/layout" %}
{% block meta %}
    {{ headTitle('Đăng nhập').setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta name="description" content="Đăng nhập">
    <meta name="keywords" content="Đăng nhập">
    <meta property="og:url" content="/user/signin">
    <meta property="og:title" content="Đăng nhập">
{% endblock %}
{% block body %}
<main>
    <div class="layer-form"></div>
    <div class="layout-form-signin">
        <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-lg-6">
                <div class="header-acount">
                    <h1>Đăng nhập <br><div class="border-header-acount mt-5"></div></h1>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-lg-6  border-left">
                <div class="form-acount-total">
                    <div class="form-acount-evenly">
                        {{ partial('partial/form',{'form':form}) }}
                        <div class="req-password btn-show"><a href="#" class="forgot-password">Quên mật khẩu?</a><br>
                            hoặc <a href="/user/signup">Đăng ký</a></div>
{#                        <form action="" class="form-signin-form-left">#}
{#                            <input type="text" placeholder="Email Hoặc Số Điện Thoại">#}
{#                            <input type="password" placeholder="Mật Khẩu">#}
{#                            <div class="button-flex-signin-form">#}
{#                                <div class="form-button-signin page-signin pull">#}
{#                                    <button class="button-signin-form">Đăng Nhập</button>#}
{#                                </div>#}
{#                                <div class="req-password"><a href="#" class="forgot-password">Quên mật khẩu?</a><br>#}
{#                                    hoặc <a href="/user/signup">Đăng ký</a></div>#}
{#                            </div>#}
{#                        </form>#}
                        <form action="" class="for-forgot-password d-none">
                            <input type="text" placeholder="Email">
                            <div class="button-flex-signin-form">
                            <div class="form-button-signin">
                                <button class="button-signin-form">Gửi</button>

                            </div>
                                <div class="req-password">
                                    <button type="button" class="btn btn-light close-form">Hủy</button>
                                </div>
                            </div>
                        </form>
                        <div class="social-login">
                            <h3 class="font-bold text-uppercase">
                                Đăng nhập bằng facebook
                            </h3>
                            <p>
                                Sử dụng tài khoản facebook
                            </p>
                            <button type="button" onclick="window.location.href='/user/fbsignin?redirect=/'" id="btn-facebook-login"><img src="//theme.hstatic.net/1000197303/1000565533/14/facebook_square-512_small.png?v=762"></button>
                            <button type="button" onclick="window.location.href='/user/ggsignin'" id="btn-google-login"><img src="//theme.hstatic.net/1000197303/1000565533/14/googleplus-512_small.png?v=762"></button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>
{% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ '/js/jquery/jquery.min.js' }}"></script>
    <script type="text/javascript" src="{{ templatePath ~'/js/user.js' }}"></script>
{% endblock %}