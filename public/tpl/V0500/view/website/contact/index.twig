{% extends 'layout/layout' %}
{% block meta %}
    {{ headTitle('Liên hệ').setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta name="description" content="Liên hệ">
    <meta name="keywords" content="Liên hệ">
    <meta property="og:url" content="{{ getCurrentUrl() }}">
    <meta property="og:title" content="Liên hệ">
    <meta property="og:type" content="article">
{% endblock %}
{% import 'layout/_lazyFocusImager' as macroLazyFocusImager %}
{% import 'layout/breadcrumbs' as breadcrumbs %}
{% block body %}
    {% block breadcrumb %}
        {% set category = [{'label': ' Liên hệ', 'uri':'/contact'}] %}
        {{ breadcrumbs.build(category) }}
    {% endblock %}
    <main class="wrapper main-content  custom_page ">
        <div id="page-wrapper">
            <div class="inner">
                <div class="grid">
                    <div class="grid__item large--one-whole">
                        <div class="page-contact-wrapper">
                            <div class="page-body">
                                <div class="grid">
                                    <div class="contact-wrapper">
                                        <div class="grid__item large--one-third medium--one-third small--one-whole">
                                            <div class="contact-item">
                                                <div class="contact-title">
                                                    <div class="contact-icon">
                                                    </div>
                                                    <h4>
                                                        Địa chỉ
                                                    </h4>
                                                </div>
                                                <div class="contact-info">
                                                    Số 102 Thái Thịnh, phường Trung Liệt, quận Đống Đa, TP Hà Nội
                                                </div>
                                            </div>
                                        </div>
                                        <div class="grid__item large--one-third medium--one-third small--one-whole">
                                            <div class="contact-item">
                                                <div class="contact-title">
                                                    <div class="contact-icon">

                                                    </div>
                                                    <h4>
                                                        Số điện thoại
                                                    </h4>
                                                </div>
                                                <div class="contact-info">
                                                    <a href="tel:(+84) 934 323 882">(+84) 934 323 882</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="grid__item large--one-third medium--one-third small--one-whole">
                                            <div class="contact-item">
                                                <div class="contact-icon">

                                                </div>
                                                <div class="contact-title">
                                                    <h4>
                                                        Email
                                                    </h4>
                                                </div>
                                                <div class="contact-info">
                                                    <a href="mailto:support@suplo.vn">abc@nhanh.vn</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="page-head">
                                    <h1>Liên hệ</h1>
                                </div>
                                <div class="form-vertical clearfix">
                                    <form accept-charset="UTF-8" action="/contact" class="contact-form" method="post">
                                        <input name="form_type" type="hidden" value="contact">
                                        <input name="utf8" type="hidden" value="✓">
                                        <div class="grid">
                                            <div class="grid__item large--one-third medium--one-third small--one-whole">

                                                <label for="ContactFormName" class="hidden-label">Họ tên của bạn</label>
                                                <input type="text" id="ContactFormName" class="input-full" name="contact[name]" placeholder="Họ tên của bạn" autocapitalize="words" value="">
                                            </div>
                                            <div class="grid__item large--one-third medium--one-third small--one-whole">
                                                <label for="ContactFormEmail" class="hidden-label">Địa chỉ email của bạn</label>
                                                <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" placeholder="Địa chỉ email của bạn" autocorrect="off" autocapitalize="off" value="">
                                            </div>
                                            <div class="grid__item large--one-third medium--one-third small--one-whole">

                                                <label for="ContactFormPhone" class="hidden-label">Số điện thoại của bạn</label>
                                                <input type="tel" id="ContactFormPhone" class="input-full" name="contact[phone]" placeholder="Số điện thoại của bạn" pattern="[0-9\-]*" value="">
                                            </div>
                                            <div class="grid__item">
                                                <label for="ContactFormMessage" class="hidden-label">Nội dung</label>
                                                <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[body]" placeholder="Nội dung"></textarea>

                                            </div>
                                            <div class="grid__item text-center">
                                                <input type="submit" class="btn btnContactSubmit" value="Gửi">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="contact-map">
                                <iframe src="//www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.571647191129!2d105.81708341533196!3d21.009801093800125!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab7d51e06cc5%3A0xec5664bc38d39b34!2zMTAyIFRow6FpIFRo4buLbmgsIFRo4buLbmggUXVhbmcsIMSQ4buRbmcgxJBhLCBIw6AgTuG7mWksIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1597033737558!5m2!1svi!2s" width="100%" height="350" frameborder="0" style="border:0" allowfullscreen=""></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}