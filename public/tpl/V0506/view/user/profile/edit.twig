{% extends "layout/layout" %}
{% block meta %}
    {{ headTitle('Thông tin người dùng').setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta name="description" content="Thông tin người dùng">
    <meta name="keywords" content="Thông tin người dùng">
    <meta property="og:url" content="{{ getCurrentUrl() }}">
    <meta property="og:title" content="Thông tin người dùng">
    <meta property="og:type" content="article">
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ '/css/validationEngine.jquery.css' }}" type="text/css">
{% endblock %}
{% block body %}
    <section class="section bgr_f3 sect_20">
        <div class="container">
            <div class="row box_user">
                <div class="col-md-4">
                    <div class="action_user">
                        <ul>
                            <li><a href="/profile">Trang cá nhân</a></li>
                            <li><a href="/order">Quản trị đơn hàng</a></li>
                            <li><a  href="/order/search">Tra cứu đơn hàng</a></li>
                            <li><a class="active" href="/profile/edit">Thay đổi thông tin</a></li>
                            <li><a href="/user/signout">Thoát</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8 box_bd_left">
                    <div class="info_user">
                        <h4 class="title_user tp_title">Sửa thông tin tài khoản cá nhân</h4>
                        <form action="" method="post" class="col-md-8 col-xs-12 col-md-offset-1">
                            <table class='table profile' cellspacing='0' border="0">
                                <tr>
                                    <td>{{ translate('Địa chỉ email')}}</td>
                                    <td class='val'>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td >{{ translate('Họ và tên')}}</td>
                                    <td class='val'>
                                        <input type="text" id="fullName" name="fullName" value="{{ user.fullName }}" placeholder="Họ tên" class="validate[required,minSize[4],maxSize[32]] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td >{{ translate('Điện thoại')}}</td>
                                    <td class='val'>
                                        <input type="text" id="mobile" name="mobile" value="{{ user.mobile }}" placeholder="Điện thoại" class="validate[required,custom[phone]] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ translate('Thành phố')}}</td>
                                    <td class='val'>
                                        <select name='cityId' id='cityId' class=" form-control">
                                            <option value="">Chọn Tỉnh/ thành phố</option>
                                            {% for city in cities %}
                                                <option {{ ((city.id) == user.cityLocationId) ?'selected="selected"' : '' }} value='{{ city.id }}'>{{ city.nativeName }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td >{{ translate('Quận Huyện')}}</td>
                                    <td class='val'>
                                        <select name='districtId' id='districtId' class=" form-control">
                                            <option value="">Chọn Quận/ Huyện</option>
                                            {% for dt in districts %}
                                                <option {{ (dt.id == user.districtLocationId) ? 'selected="selected"' : '' }} value='{{ dt.id }}'>{{ dt.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td >{{ translate('Địa chỉ')}}</td>
                                    <td class='val'>
                                        <input type="text" id="address" name="address" value="{{ user.address }}" placeholder="Địa chỉ chi tiết" class="validate[required] form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td class="val">
                                        <button type='submit' class="btn btn-lg btn-style tp_button">{{ translate('Xác nhận')}}</button>
                                        <button type="button" class="btn btn-lg btn-style tp_button" onclick="window.location.href='/profile'">Hủy</button>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="foote_user clearfix container pt-4">
        <a href="/" class="pull-right">Tiếp tục mua sắm <i class="fa fa-caret-right"></i></a>
    </div>
{% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ '/js/jquery/jquery.validationEngine-vi.js' }}"></script>
    <script type="text/javascript" src="{{ '/js/jquery/jquery.validationEngine.js' }}"></script>
    <script type="text/javascript" src="{{ templatePath ~'/js/user.js' }}"></script>
{% endblock %}